@page "/create-doctor"
@using Sparc.Blossom.Template.Entities
@inject Sparc.Blossom.Template.Aggregaters.DoctorAggregate _doctorAggregate
@inject NavigationManager Nav

<PageTitle>Create Doctor</PageTitle>

<style>
    /* General Body Styling */
    body {
        background-color: #f4f9fd;
        font-family: 'Roboto', sans-serif;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(to right, #388E3C, #4CAF50);
        color: white;
        padding: 50px 0;
        text-align: center;
        margin-bottom: 40px;
    }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.25rem;
        }

    /* Form Card Styling */
    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        background-color: #fff;
        padding: 40px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        height: 45px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #388E3C;
        border: none;
        padding: 15px;
        font-size: 1.1rem;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #4CAF50;
        }

    .mb-3 {
        margin-bottom: 20px;
    }

    /* Footer */
    footer {
        background-color: #388E3C;
        color: white;
        padding: 20px 0;
        text-align: center;
        font-size: 1rem;
    }

    /* Responsive Design */
   /*  media (max-width: 768px) {
        .hero-section h1

    {
