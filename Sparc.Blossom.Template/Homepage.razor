@page "/all-doctors"
@using Sparc.Blossom.Template.Entities
@inject Sparc.Blossom.Template.Aggregates.UserAggregate _userAggregate
@inject NavigationManager Nav

<PageTitle>Doctors List</PageTitle>

<h3 class="text-center my-4">Doctors List</h3>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (doctors == null)
                    {
                        <p>Loading...</p>
                    }
                    else if (doctors.Count == 0)
                    {
                        <p>No doctors available at the moment.</p>
                    }
                    else
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>                                   
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in doctors)
                                {
                                    <tr>
                                        <td>@doctor.FirstName @doctor.LastName</td>
                                        <td>@doctor.Email</td>
                                        <td>@doctor.Phone</td>                                        
                                        <td>
                                            <button class="btn btn-info btn-sm" @onclick="() => ViewDetails(doctor.Id)">View Details</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Sparc.Blossom.Template.Entities.User> doctors;

    protected override async Task OnInitializedAsync()
    {
        //doctors = await _userAggregate.GetAllDoctorsAsync();
    }

    private void ViewDetails(Guid doctorId)
    {
        Nav.NavigateTo($"/doctor/{doctorId}");
    }
}

