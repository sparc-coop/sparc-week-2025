<h4>Mente Form</h4>

<EditForm Model="@menteeModel">
    <div>
        <label for="interests">Choose your interests</label>
        <select id="interests" name="interests" multiple @onchange="UpdateInterests">
            <option value="personal_growth">Personal Growth</option>
            <option value="career">Career</option>
            <option value="health">Health</option>
            <option value="technology">Technology</option>
            <option value="education">Education</option>
            <option value="entrepreneurship">Entrepreneurship</option>
        </select>
    </div>

    <div>
        <label for="preferredTimes">Preferred Times</label>
        <select id="preferredTimes" name="preferredTimes" multiple @onchange="UpdatePreferredTimes">
            <option value="morning">Morning</option>
            <option value="afternoon">Afternoon</option>
            <option value="evening">Evening</option>
            <option value="night">Night</option>
        </select>
    </div>
</EditForm>

@code {
    [Parameter] public Mentee menteeModel { get; set; }

    private void UpdateInterests(ChangeEventArgs e)
    {
        var selectedValues = ((IEnumerable<string>)e.Value).ToList();
        menteeModel.UpdateInterests(selectedValues);  
    }

    private void UpdatePreferredTimes(ChangeEventArgs e)
    {
        var selectedValues = ((IEnumerable<string>)e.Value).ToList();
        menteeModel.UpdatePreferredTimes(selectedValues);  
    }
}
