    }

    .hero-section p {
        font-size: 1rem;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        height: 40px;
    }

    .btn-primary {
        font-size: 1rem;
    }

    } */
</style>

<!-- Hero Section (Optional) -->
<section class="hero-section">
    <div class="container">
        <h1>Create a New Doctor</h1>
        <p>Fill in the details below to add a new doctor to the platform</p>
    </div>
</section>

<!-- Create Doctor Form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <EditForm Model="@doctor" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <InputText id="fullName" class="form-control" @bind-Value="doctor.FullName" />
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" class="form-control" @bind-Value="doctor.Email" />
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <InputText id="phone" class="form-control" @bind-Value="doctor.Phone" />
                        </div>

                        <!-- Specialty -->
                        <div class="mb-3">
                            <label for="specialty" class="form-label">Specialty</label>
                            <InputText id="specialty" class="form-control" @bind-Value="doctor.Specialty" />
                        </div>

                        <!-- Submit Button -->
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <p>&copy; 2025 Healthcare Inc. All rights reserved.</p>
</footer>

@code {
    private Sparc.Blossom.Template.Entities.Doctor doctor = new Sparc.Blossom.Template.Entities.Doctor();

    private async Task HandleValidSubmit()
    {
        await _doctorAggregate.Create(doctor);
        Nav.NavigateTo("/doctors");
    }
}
